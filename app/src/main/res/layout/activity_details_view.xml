<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical">

    <ImageView
        android:id="@+id/grid_item_image"
        android:layout_width="383dp"
        android:layout_height="241dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/grid_item_image"
        android:layout_alignParentStart="true"

        android:layout_gravity="center_horizontal|top"
        android:background="#07000000"
        android:fontFamily="@font/myfont"
        android:padding="10dp"
        android:textColor="#fff"
        android:textSize="20dp"
        android:theme="@style/Base.V23.Theme.AppCompat.Light"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/overview"
        android:layout_width="match_parent"

        android:layout_height="253dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/grid_item_image"
        android:layout_gravity="center"
        android:fontFamily="@font/myfont"
        android:maxLines="4"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/votes"
        android:layout_width="100dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/runtime"
        android:layout_gravity="left|bottom"
        android:text=""
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lang"
        android:layout_width="114dp"
        android:layout_height="49dp"
        android:layout_alignEnd="@+id/grid_item_image"
        android:layout_alignTop="@+id/dates"
        android:layout_gravity="left|bottom"
        android:layout_marginEnd="-14dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dates"
        android:layout_width="157dp"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/overview"
        android:layout_gravity="right|bottom"
        android:layout_toEndOf="@+id/runtime"
        android:fontFamily="@font/myfont"
        android:padding="10dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/runtime"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/overview"

        android:layout_alignParentStart="true"
        android:layout_gravity="right|bottom"
        android:fontFamily="@font/myfont"
        android:padding="10dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="296dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/overview"
        android:layout_gravity="right|bottom"
        android:fontFamily="@font/myfont"
        android:padding="10dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="14sp" />


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:elevation="5dp"
        card_view:cardCornerRadius="0dp"
        tools:layout_editor_absoluteX="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="164dp">

            <TextView
                android:id="@+id/grid_item_title2"
                android:layout_width="240dp"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/myfont"
                android:gravity="center"
                android:maxLines="1"
                android:text="Revenue"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/grid_item_title"
                android:layout_width="240dp"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/myfont"
                android:gravity="center"
                android:maxLines="1"
                android:text="Budget"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rev"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/budg"
                android:layout_centerVertical="true"
                android:fontFamily="@font/myfont" />

            <TextView
                android:id="@+id/budg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/grid_item_title"
                android:layout_marginEnd="101dp"
                android:fontFamily="@font/myfont" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>









</RelativeLayout>
